<%= link_to({ controller: 'auth/board/home' }, text: true, state: 'enter', class: 'media p-3') do %>
  <div class="media-left">
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar, class: 'image is-64x64 is-radius' %>
  <% elsif current_user.name.present? %>
    <div class="is-avatar">
      <div class="text"><%= current_user.name.to_s[0] %></div>
    </div>
  <% else %>
    <%= image_tag 'default_avatar.jpg', class: 'image is-64x64 is-radius' %>
  <% end %>
  </div>
  <div class="media-content color-grey-dark">
    <% if current_user.name.present? || current_account&.identity.present? %>
      <strong><%= current_user.name %></strong>
      <p class="size-7"><%= current_account&.identity %></p>
    <% else %>
      <div
        data-controller="mini-program"
        data-mini-program-nav-value="true"
        data-mini-program-url-value="/pages/profile/index"
        data-action="click->mini-program#navTo"
      >去完善信息</div>
    <% end %>
  </div>
  <div class="media-right">
    <i class="fa-solid fa-qrcode"></i>
    <i class="fa-solid fa-chevron-right pl-2"></i>
  </div>
<% end %>
