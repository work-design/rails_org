<%= link_to({ controller: 'trade/our/carts', action: 'list' }, class: 'media') do %>
  <div class="media-content">
    <i class="fa-solid fa-fw fa-arrow-right-arrow-left has-text-primary"></i>
    <span class="color-grey"><%= current_client.organ.name %></span>
  </div>
  <div class="media-right">
    <span class="color-grey has-text-weight-normal">切换</span>
  </div>
<% end %>
<%= link_to({ controller: 'org/me/members', action: 'show', host: current_client.organ.host, auth_token: current_account.auth_token }, state: 'enter', class: 'media') do %>
  <div class="media-content">
    <i class="fa-solid fa-fw fa-user has-text-primary"></i>
    <span><%= t('org.me.members.show.title') %></span>
  </div>
  <div class="media-right">
    <i class="fa-solid fa-chevron-right"></i>
  </div>
<% end %>
<%= link_to({ controller: 'org/me/members', action: 'qrcodes', host: current_client.organ.host, auth_token: current_account.auth_token }, state: 'enter', class: 'media') do %>
  <div class="media-content">
    <i class="fa-solid fa-fw fa-qrcode has-text-primary"></i>
    <span><%= t('org.me.members.qrcodes.title') %></span>
  </div>
  <div class="media-right">
    <i class="fa-solid fa-chevron-right"></i>
  </div>
<% end %>
