<% Roled::OrganRole.visible.each do |role| %>
  <%= link_to role.tip, { controller: 'org/board/organs', action: 'new', role_id: role.id }, class: active_helper(controller: 'org/board/organs', action: 'new', role_id: role.id, active: 'navbar-item is-active', item: 'navbar-item') %>
<% end %>
<div class="navbar-item has-dropdown is-hoverable is-hidden-touch">
  <div class="navbar-link">
    <%= image_tag current_organ.logo if current_organ && current_organ.logo.attached? %>
    <span><%= current_organ.present? ? current_organ.name : t('.title') %></span>
  </div>
  <div class="navbar-dropdown is-right">
  <% current_user.accounts.each do |account| %>
    <div class="navbar-item">
      <span class="is-size-7 has-text-grey"><%= account.identity %></span>
    </div>
    <div class="navbar-divider"></div>
    <% account.members.each do |member| %>
      <% if current_organ.self_and_ancestor_ids.include?(member.organ_id) %>
        <%= link_to({ controller: '/me/home', auth_token: current_authorized_token.id, **member.organ.admin_url_options(request) }, text: true, class: 'navbar-item is-active') do %>
          <span><%= member.organ.name %></span>
        <% end %>
      <% else %>
        <%= link_to({ controller: '/me/home', auth_token: current_authorized_token.id, **member.organ.admin_url_options(request) }, text: true, class: 'navbar-item') do %>
          <span><%= member.organ.name %></span>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <% current_user.oauth_users.each do |oauth_user| %>
    <div class="navbar-item"><%= oauth_user.name.presence || oauth_user.uid %></div>
    <div class="navbar-divider"></div>
    <% oauth_user.org_members.each do |member| %>
      <% if current_organ.self_and_ancestor_ids.include?(member.organ_id) %>
        <%= link_to({ controller: '/me/home', auth_token: current_authorized_token.id, **member.organ.admin_url_options(request) }, text: true, class: 'navbar-item is-active') do %>
          <span><%= member.organ.name %></span>
        <% end %>
      <% else %>
        <%= link_to({ controller: '/me/home', auth_token: current_authorized_token.id, **member.organ.admin_url_options(request) }, text: true, class: 'navbar-item') do %>
          <span><%= member.organ.name %></span>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
