<%= render partial: 'shared/locales' %>
<%= render partial: 'notice_link' %>
<div class="navbar-item has-dropdown is-hoverable">
  <% if defined? current_member %>
    <div class="navbar-link">
      <%= image_tag current_member.avatar, class: 'image is-24x24' if current_member.avatar.attached? %>
      <%= current_member.name %>
    </div>
  <% else %>
    <div class="navbar-link">
      <%= image_tag current_user.avatar, class: 'image is-24x24' if current_user.avatar.attached? %>
      <%= current_user.name %>
    </div>
  <% end %>
  <div class="navbar-dropdown is-right">
    <%= link_to '个人中心', me_root_url, class: active_helper(controllers: ['users'], active: 'navbar-item is-active', item: 'navbar-item') %>
    <%= link_to '管理', admin_root_url, class: 'navbar-item' %>
    <%= link_to '退出', logout_path, data: { confirm: '确认退出' }, remote: true, class: 'navbar-item' %>
  </div>
</div>
