<% if role_permit?(business: 'org', namespace: 'admin') %>
<div class="media">
  <figure class="media-left">
    <%= image_tag 'org_logo.png', class: 'image is-64x64' %>
  </figure>
  <div class="media-content">
    <div class="content">
      <strong><%= t('org.admin.title') %></strong>
    </div>
    <div>
      <div class="tags has-addons">
        <%= link_to({ controller: 'org/admin/organs' }, class: 'tag is-link') do %>
          <span><%= t('org.admin.organs.index.title') %></span>
        <% end %>
        <%= button_to({ controller: 'org/admin/shortcuts', action: 'create' }, params: { 'shortcut[controller]': 'org/admin/organs' }, form: { class: 'tag is-primary' }) do %>
          <span><%= t('org.admin.shortcuts.create.title') %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>