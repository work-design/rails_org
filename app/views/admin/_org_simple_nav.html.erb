    <div>
      <i class="fa-solid fa-fw fa-sitemap"></i>
      <span><%= t('org.admin.title') %></span>
    </div>
    <%= link_to({ controller: 'org/admin/home' }, aria: { label: '设置' }) do %>
      <i class="fa-solid fa-cog"></i>
    <% end %>
  </div>
  <div class="menu-list">
    <%= link_to t('org.admin.organs.index.title'), { controller: 'org/admin/organs' }, data: { turbo_frame: 'body', action: 'menu#enter' }, class: active_helper(controllers: ['organs', 'organ_domains'], active: 'is-active') %>
    <%= link_to t('org.admin.members.index.title'), { controller: 'org/admin/members' }, data: { turbo_frame: 'body', action: 'menu#enter' }, class: active_helper(controllers: ['members'], active: 'is-active') %>
