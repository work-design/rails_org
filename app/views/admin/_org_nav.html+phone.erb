<div class="box is-padding-less">
  <div class="box-body">
    <span class="size-7 has-border-left-primary"><%= t('org.admin.title') %></span>
  </div>
  <div class="columns is-4-mobile flex is-vcentered is-centered m-0 is-shadow" data-empty-target="content">
    <%= link_to({ controller: 'org/admin/members' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <i class="fa-solid fa-fw fa-xl fa-user-gear"></i>
      </div>
      <div class="text-grey size-7 mt-1"><%= t('org.admin.members.index.title') %></div>
    <% end %>
    <%= link_to({ controller: 'org/admin/departments' }, class: 'column has-column-centered') do %>
      <div class="text-primary">
        <i class="fa-solid fa-fw fa-xl fa-chalkboard-user"></i>
      </div>
      <div class="text-dark size-7 mt-1"><%= t('org.admin.departments.index.title') %></div>
    <% end %>
  </div>
</div>
