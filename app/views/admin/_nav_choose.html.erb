<% if current_organ %>
  <%= link_to root_url(host: RailsCom.config.host), class: 'navbar-item' do %>
    <%= image_pack_tag 'logo.png', class: 'image' %>
  <% end %>
  <% current_organ.ancestors.reverse.each do |node| %>
    <%= link_to filter_params(host: request.host, subdomain: node.subdomain), class: active_helper(host: current_organ.host, active: 'navbar-item', item: 'navbar-item') do %>
      <%= image_tag node.logo, class: 'image' if node.logo.attached? %>
      <span><%= node.name %></span>
    <% end %>
  <% end %>
  <div class="navbar-item has-dropdown is-hoverable">
    <div class="navbar-link">
      <%= image_tag current_organ.logo, class: 'image' if current_organ.logo.attached? %>
      <%= current_organ.name %>
    </div>
    <% unless current_organ.root? %>
    <div class="navbar-dropdown">
      <% current_organ.siblings.each do |node| %>
        <%= link_to node.name, filter_params(host: request.host, subdomain: node.subdomain), class: 'navbar-item' %>
      <% end %>
    </div>
    <% end %>
  </div>
  <% if current_organ.children.count > 0 %>
    <div class="navbar-item has-dropdown is-hoverable">
      <div class="navbar-link">More</div>
      <div class="navbar-dropdown">
        <% current_organ.children.each do |node| %>
          <%= link_to node.name, filter_params(host: request.host, subdomain: node.subdomain), class: 'navbar-item' %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <%= link_to root_url(host: RailsCom.config.host), class: 'navbar-item' do %>
    <%= image_pack_tag 'logo.png', class: 'image' %>
  <% end %>
<% end %>
