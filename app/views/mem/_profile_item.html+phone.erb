<%= link_to({ controller: 'auth/our/home' }, text: true, state: 'enter', class: 'media') do %>
  <div class="media-left">
  <% if current_client.organ.logo.attached? %>
    <%= image_tag current_client.organ.logo, class: 'image is-64x64 is-radius image is-64x64' %>
  <% else %>
    <%= image_tag 'default_avatar.jpg', class: 'image is-64x64 is-radius' %>
  <% end %>
  </div>
  <div class="media-content">
    <strong class="weui-media-box__title">
      <span class="size-0_9"><%= current_client.name %></span>
    </strong>
    <div class="weui-media-box__desc">
      <span class="text-weight-normal size-7"><%= current_client.organ.name %></span>
    </div>
  </div>
  <div class="weui-media-box__ft pr-4 text-grey">
    <i class="fa-solid fa-qrcode"></i>
    <i class="fa-solid fa-chevron-right pl-2"></i>
  </div>
<% end %>
