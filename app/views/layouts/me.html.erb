<%= render layout: 'layouts/application_head' do %>
  <body>
    <%= render 'me/nav_bar' %>
    <main class="columns">
      <div class="column is-narrow" style="width: 260px;">
        <% if content_for?(:nav) %>
          <%= yield :nav %>
        <% else %>
          <%= render 'me/nav' %>
        <% end %>
      </div>
      <div class="column">
        <div class="as-main">
          <% if content_for?(:breadcrumb) %>
            <%= yield(:breadcrumb) %>
          <% else %>
            <%= render 'breadcrumb' %>
          <% end %>
          <%= yield %>
        </div>
        <%# render 'footer' %>
      </div>
    </main>
    <div id="modal"></div>
  </body>
<% end %>
