<div class="ui cards">
  <% @organs.each do |organ| %>
  <div class="card">
    <div class="content">
      <%= image_tag organ.logo.variant(resize_to_limit: [150, 150]), class: 'ui avatar image' %>
      <span class="ui grey text"><%= organ.name %></span>
      <span class="ui green text"><%= organ.organ_uuid %></span>
    </div>
    <div class="extra content">
      <% organ.members.where(user_id: current_user.id).each do |member| %>
      <p>
        <%= link_to member.name, login_my_member_path(member), method: :patch, remote: true, class: 'ui mini button' %>
        <span><%= member.departments.first&.full_name %></span>
      </p>
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="card">
    <div class="content">
      <%= link_to new_my_organ_path, aria: { label: t('org.mine.organs.new.title') }, remote: true do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
</div>
