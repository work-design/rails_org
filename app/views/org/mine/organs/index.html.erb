<% @organs.each do |organ| %>
<div class="media">
  <div class="media-left">
    <%= image_tag organ.logo.variant(resize_to_limit: [150, 150]), class: 'image is-24x24' %>
  </div>
  <div class="media-content">
    <span class="has-text-grey-light"><%= organ.name %></span>
    <span class="has-text-success"><%= organ.organ_uuid %></span>
    <% organ.members.where(user_id: current_user.id).each do |member| %>
    <p>
      <%= link_to member.name, login_my_member_path(member), method: :patch, remote: true, class: 'button' %>
      <span><%= member.departments.first&.full_name %></span>
    </p>
    <% end %>
  </div>
  <div class="media-right">
  
  </div>
</div>
<% end %>
<div class="media">
  <div class="media-content">
    <%= link_to new_my_organ_path, aria: { label: t('org.mine.organs.new.title') }, remote: true do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
</div>
