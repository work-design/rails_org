<%= form_with theme: 'search', model: Member.new do |f| %>
  <div class="fields">
    <%= f.text_field :'name-like' %>
    <%= f.email_field :email %>
    <%= f.submit %>
  </div>
<% end %>

<dl>
  <dt>Office:</dt>
  <dd>
    <%= link_to t('.all'), filter_params(except: [:office_id]), class: active_params(office_id: '', active_class: 'button is-info', item_class: 'button is-light') %>
    <% Office.all.each do |office| %>
      <%= link_to "#{office.name}（#{office.enabled_members_count}）", filter_params(office_id: office.id), class: active_params(office_id: office.id, active_class: 'button is-info', item_class: 'button is-light') %>
    <% end %>
  </dd>
</dl>
