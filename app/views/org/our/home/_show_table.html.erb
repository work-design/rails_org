<table class="table is-fullwidth">
  <thead>
    <tr>
      <th class="six wide">
        <%= link_to t('.edit'), edit_our_organ_path, class: 'ui mini blue right floated button', remote: true %>
      </th>
      <th class="ten wide"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="right aligned"><%= Organ.human_attribute_name(:name) %></td>
      <td><%= current_organ.name %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Organ.human_attribute_name(:organ_uuid) %></td>
      <td><%= current_organ.organ_uuid %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Organ.human_attribute_name(:area_id) %></td>
      <td><%= current_organ.area&.full_name %></td>
    </tr>
    <tr>
      <td class="right aligned"><%= Organ.human_attribute_name(:limit_wechat) %></td>
      <td><%= current_organ.limit_wechat %></td>
    </tr>
  </tbody>
</table>
