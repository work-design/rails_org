<dl>
  <dt>State:</dt>
  <dd>
    <%= link_to t('.all'), filter_params(except: [:state]), class: active_params(state: '', active_class: 'button is-info', item_class: 'button is-light') %>
    <% JobTransfer.states.keys.each do |state| %>
      <%= link_to JobTransfer.enum_i18n(:state, state), filter_params(state: state), class: active_params(state: state, active_class: 'button is-info', item_class: 'button is-light') %>
    <% end %>
  </dd>
</dl>


