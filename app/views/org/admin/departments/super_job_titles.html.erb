<% content_for :breadcrumb do %>
  <ul>
    <li><%= link_to t('org.admin.departments.index.title'), admin_departments_path %></li>
    <li><%= link_to @department.name, admin_department_path(params[:id]) %></li>
    <li class="is-active"><%= JobTitle.human_name %></li>
  </ul>
<% end %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>
        <%= JobTitle.human_attribute_name(:grade) %>
        <span data-tooltip="<%= JobTitle.help_i18n(:grade) %>"><i class="grey question circle icon"></i></span>
      </th>
      <th><%= JobTitle.human_attribute_name(:name) %></th>
      <th><%= JobTitle.human_attribute_name(:description) %></th>
      <th><%= JobTitle.human_attribute_name(:department_id) %></th>
      <th><%= JobTitle.human_attribute_name(:role_ids) %></th>
      <th>
        <%= link_to new_admin_department_job_title_path(params[:id]), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @super_job_titles.each do |super_job_title| %>
    <tr>
      <td><%= super_job_title.grade %></td>
      <td><%= super_job_title.name %></td>
      <td><%= super_job_title.description %></td>
      <td>
        <div data-controller="input">
          <% if @department.root.super_job_title_ids.include?(super_job_title.id) %>
            <%= check_box_tag :department_id, @department.id, true, data: { method: :delete, remote: true, url: department_admin_super_job_title_path(super_job_title), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
          <% else %>
            <%= check_box_tag :department_id, @department.id, false, data: { method: :post, remote: true, url: department_admin_super_job_title_path(super_job_title), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
          <% end %>
          <label></label>
        </div>
      </td>
      <td></td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
</table>
