<%= render 'index_bar' %>

<%= render layout: 'index_table' do %>
  <%= render partial: 'current_tbody', layout: 'index_tr', locals: { model: current_organ } %>
  <%= render partial: 'index_tbody', layout: 'index_tr', collection: @organs, as: :model %>
  <tr>
    <td colspan="5" class="pl-6">
      <%= button_to({ action: 'new', **request.query_parameters.except(:id) }, class: 'button is-small is-link') do %>
        <i class="fa-solid fa-plus"></i>
        <span class="pl-1"><%= t('.new.title') %></span>
      <% end %>
    </td>
  </tr>
<% end %>
