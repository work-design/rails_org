<%= form_with model: @organ, url: { action: 'create' }, class: 'modal-card' do |f| %>
  <header class="modal-card-head">
    <p class="modal-card-title"><%= t('.title') %></p>
    <button type="button" data-action="modal#close" class="delete"></button>
  </header>
  <section class="modal-card-body">
    <%= render 'error_messages', target: @organ %>
    <% if current_organ&.children.present? %>
      <%= render partial: 'com/nodes/children_select', locals: { f: f, node: current_organ } %>
    <% end %>
    <%= render partial: 'form', locals: { f: f } %>
  </section>
  <footer class="modal-card-foot">
    <%= f.submit %>
  </footer>
<% end %>
