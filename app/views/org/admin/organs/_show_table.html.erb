<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th class="six wide">
        <%= link_to t('.edit'), edit_admin_organ_path(@organ.id), class: 'ui mini blue right floated button' %>
      </th>
      <th class="ten wide"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="has-text-right"><%= Organ.human_attribute_name(:name) %></td>
      <td><%= @organ.name %></td>
    </tr>
    <tr>
      <td class="has-text-right"><%= Organ.human_attribute_name(:organ_uuid) %></td>
      <td><%= @organ.organ_uuid %></td>
    </tr>
    <tr>
      <td class="has-text-right"><%= Organ.human_attribute_name(:area_id) %></td>
      <td><%= @organ.area&.full_name %></td>
    </tr>
    <tr>
      <td class="has-text-right"><%= Organ.human_attribute_name(:limit_wechat) %></td>
      <td><%= @organ.limit_wechat %></td>
    </tr>
  </tbody>
</table>
