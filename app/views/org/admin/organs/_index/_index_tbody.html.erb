<td>
  <div class="is-several">
    <span style="width: <%= model.depth * 1.43 %>em; display: inline-block"></span>
    <% if !model.leaf? %>
      <i class="fa-light fa-caret-down fa-fw" data-action="click->tree#collapse" style="cursor: pointer"></i>
    <% else %>
      <i class="fa-light fa-minus fa-fw"></i>
    <% end %>
    <%= image_tag model.logo.variant(resize_to_limit: [30, 30]), class: 'image is-24x24' if model.logo.attached? %>
    <span><%= model.name %></span>
    <% if model.name_short.present? %>
      <span>（<%= model.name_short %>）</span>
    <% end %>
  </div>
</td>
<td><%= model.code %></td>
<td>
  <p><%= model.area&.full_name %></p>
  <p><%= model.address %></p>
</td>
<td>
  <div class="tags">
    <% model.roles.pluck(:name).each do |role| %>
      <span class="tag"><%= role %></span>
    <% end %>
    <%= link_to({ controller: 'roled/admin/who_roles', action: 'show', who_type: 'Org::Organ', who_id: model.id }, data: { turbo_frame: 'modal' }) do %>
      <i class="fa-light fa-user-shield"></i>
    <% end %>
  </div>
</td>
