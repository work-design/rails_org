<div class="ui modal" id="modal">
  <i class="fas fa-times close"></i>
  <div class="ui header">
    <%= t('.new') %>
  </div>

  <div class="content">
    <%= form_with model: [:admin, @organ] do |f| %>
      <%= render 'shared/error_messages', target: @organ %>
      <% if current_organ&.children.present? %>
        <%= render partial: 'nodes/children_select', locals: { f: f, node: current_organ } %>
      <% end %>
      <%= render partial: 'form', locals: { f: f } %>
    <% end %>
  </div>
</div>
