<%= form_with theme: 'search', model: Member.new do |f| %>
  <div class="fields">
    <%= f.text_field :'name-like' %>
    <%= f.text_field :identity %>
    <%= f.submit %>
    <%= link_to t('.clear'), filter_params(except: [:'name-like', :identity]), class: 'ui button' %>
  </div>
<% end %>
<div class="ui divider"></div>
<dl>
  <dt><%= Member.human_attribute_name(:enabled) %></dt>
  <dd>
    <%= link_to t('.enabled'), filter_params(enabled: 1), class: active_params(enabled: 1, active_class: 'button is-info', item_class: 'button is-light') %>
    <%= link_to t('.disabled'), filter_params(enabled: 0), class: active_params(enabled: 0, active_class: 'button is-info', item_class: 'button is-light') %>
  </dd>
</dl>
