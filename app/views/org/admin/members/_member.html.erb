<tr>
  <td>
    <% if member.user && member.user.avatar.attached? %>
      <%= link_to admin_user_path(member.user_id) do %>
        <%= image_tag member.user.avatar.variant(resize_to_limit: [35, 35]), class: 'ui avatar image' %>
      <% end %>
    <% end %>
    <%= link_to member.name, admin_member_path(member) %>
  </td>
  <td><%= member.organ&.name %></td>
  <td>
    <% member.member_departments.each do |md| %>
      <p>
        <span>
          <% if md.department %>
          <%= link_to md.department.full_name, admin_department_path(md.department_id) %>
          <% end %>
        </span>
        <span>
          <%= md.job_title&.name %>
        </span>
        <span>
          <% if md.major %>
            <i class="crosshairs icon"></i>
          <% end %>
        </span>
      </p>
    <% end %>
  </td>
  <td><%= member.identity %></td>
  <td><%= member.join_on %></td>
  <td>
    <div class="ui labels">
      <% member.roles.pluck(:name).each do |role| %>
        <span class="ui label"><%= role %></span>
      <% end %>
    </div>
  </td>
  <td>
    <%= link_to admin_member_path(member), aria: { label: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to profile_admin_member_path(member), aria: { label: t('.profile') }, class: 'ui mini circular icon button' do %>
      <i class="fas fa-id-card"></i>
    <% end %>
    <%= link_to admin_member_organ_grants_path(member), aria: { label: t('.role') }, class: 'ui mini circular icon button' do %>
      <i class="fas fa-user-shield"></i>
    <% end %>
    <%= link_to edit_admin_member_path(member), aria: { label: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to mock_admin_member_path(member), method: :patch, aria: { label: t('.mock') }, class: 'ui mini circular icon button' do %>
      <i class="fas fa-hand-point-right"></i>
    <% end %>
    <%# link_to 'tutorials', admin_tutorials_path(member_id: member.id), class: 'ui mini circular button' %>
  </td>
</tr>
