<% content_for :breadcrumb do %>
  <ul>
    <li><%= link_to t('org.admin.members.index.title'), admin_members_path %></li>
    <li class="is-active"><%= t('.title') %></li>
  </ul>
<% end %>

<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= OrganGrant.human_attribute_name(:organ_id) %></th>
      <th><%= OrganGrant.human_attribute_name(:user_id) %></th>
      <th><%= OrganGrant.human_attribute_name(:token) %></th>
      <th><%= OrganGrant.human_attribute_name(:expire_at) %></th>
      <th><%= OrganGrant.human_attribute_name(:mock) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @organ_grants.each do |organ_grant| %>
    <tr>
      <td><%= organ_grant.organ.name %></td>
      <td><%= link_to organ_grant.user.name, panel_user_path(organ_grant.user_id), remote: true %></td>
      <td><%= organ_grant.token %></td>
      <td><time><%= organ_grant.expire_at.to_s(:rfc822) %></time></td>
      <td><%= organ_grant.mock %></td>
      <td>
        <%= link_to admin_member_organ_grant_path(@member, organ_grant), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @organ_grants %>
