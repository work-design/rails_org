<tr>
  <td><%= authorized_token.user_id %></td>
  <td><%= authorized_token.oauth_user_id %></td>
  <td style="word-break: break-all"><%= authorized_token.token %></td>
  <td><time data-controller="time"><%= authorized_token.expire_at.to_fs(:iso8601) %></time></td>
  <td><%= authorized_token.mock_member %></td>
  <td>
    <%= link_to({ action: 'show', id: authorized_token.id }, { aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fa-light fa-circle-info"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: authorized_token.id }, { aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fa-light fa-pencil"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: authorized_token.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fa-light fa-trash"></i>
    <% end %>
  </td>
</tr>
