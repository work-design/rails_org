<%= form_with model: [:admin, @support], local: true do |f| %>
  <%= render 'shared/error_messages', target: @support %>
  <%= render partial: 'taxon/nodes/outer_select', locals: { f: f, outer: 'department' } %>
  <%= f.collection_select :office_id, Office.all, :id, :name, { include_blank: true } %>
  <%= f.select :member_id, options_for_select([[@support.supporter&.name, @support.supporter_id]], @support.supporter_id) %>
  <%= f.select :kind, options_for_select(Support.options_i18n(:kind), @support.kind) %>
  <%= f.select :supporter_id, options_for_select([[@support.supporter&.name, @support.supporter_id]], @support.supporter_id) %>
  <%= f.submit %>
<% end %>
