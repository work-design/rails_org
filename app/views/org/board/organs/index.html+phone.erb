<div class="weui-panel is-box is-borderless mt-2">
  <div class="weui-panel__bd">
    <%= render 'profile_item' %>
  </div>
</div>

<div class="weui-panel is-box">
  <div class="weui-panel__hd">我创建的</div>
  <div class="weui-panel__bd">
    <%= render partial: 'organ', collection: current_user.created_organs, as: :organ %>
  </div>
</div>

<div class="weui-panel is-box">
  <div class="weui-panel__hd">我加入的</div>
  <div class="weui-panel__bd">
    <%= render partial: 'organ', collection: @organs, as: :organ %>
  </div>
</div>

<div class="weui-panel is-box">
  <div class="weui-panel__bd">
  <% @roles.each do |role| %>
    <%= link_to({ controller: 'organs', action: 'new', role_id: role.id }, class: 'weui-cell weui-cell_access') do %>
      <i class="fa-solid fa-plus"></i>
      <span class="pl-1"><%= role.tip %></span>
    <% end %>
  <% end %>
  </div>
</div>
