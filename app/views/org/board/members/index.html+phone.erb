<% @organs.each do |organ, members| %>
  <div class="weui-panel">
    <div class="weui-panel__hd media">
      <div class="media-left">
        <%= image_tag organ.logo.variant(resize_to_limit: [150, 150]), class: 'image is-48x48' if organ.logo.attached? %>
      </div>
      <div class="media-content">
        <strong><%= organ.name %></strong>
      </div>
      <div class="media-right"></div>
    </div>
    <div class="weui-panel__bd">
    <% members.each do |member| %>
      <div class="weui-media-box weui-media-box_small-appmsg">
        <div class="weui-cells">
          <div class="weui-cell weui-cell_access">
            <div class="weui-cell__hd">
              <%= image_tag member.avatar.variant(resize_to_limit: [150, 150]), class: 'image is-48x48' if member.avatar.attached? %>
            </div>
            <div class="weui-cell__bd">
              <span><%= member.departments.first&.full_name %></span>
              <span><%= member.name %></span>
            </div>
            <div class="weui-cell__ft">
              <%= link_to '工作台', login_my_my_member_path(member), method: :patch, remote: true, class: 'card-footer-item' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
<% end %>
<div class="weui-panel weui-panel_access">
  <div class="weui-panel__ft">
    <%= link_to new_my_member_path, class: 'weui-cell weui-cell_access' do %>
      <i class="fas fa-plus"></i><span><%= t('org.my.organs.new.title') %></span>
    <% end %>
  </div>
</div>
