<%= render 'tabs' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
  <tr>
    <th class="three wide"></th>
    <th>
      <% if !@resign.persisted? %>
        <%= link_to 'New', new_my_resign_path, class: 'ui mini blue right floated button' %>
      <% elsif @resign.init? %>
        <%= link_to 'Delete', my_resign_path(@resign), method: :delete, data: { confirm: t('.confirm') }, class: 'ui mini red right floated button' %>
        <%= link_to 'Edit', edit_my_resign_path(@resign), class: 'ui mini blue right floated button' %>
      <% end %>
    </th>
  </tr>
  </thead>
  <% if @resign.persisted? %>
  <tbody>
  <tr>
    <td class="has-text-right"><%= Resign.human_attribute_name(:resign_reason) %></td>
    <td class="ui labels">
      <% @resign.resign_reasons.each do |resign_reason| %>
        <span class="ui label"><%= resign_reason.name %></span>
      <% end %>
    </td>
  </tr>
  <tr>
    <td class="has-text-right"><%= Resign.human_attribute_name(:leave_on) %></td>
    <td><%= @resign.leave_on %></td>
  </tr>
  <tr>
    <td class="has-text-right"><%= Resign.human_attribute_name(:reason_note) %></td>
    <td><%= simple_format @resign.reason_note %></td>
  </tr>
  <tr>
    <td class="has-text-right"><%= Resign.human_attribute_name(:state) %></td>
    <td><%= @resign.state_i18n %></td>
  </tr>
  <tr>
    <td class="has-text-right"><%= Resign.human_attribute_name(:created_at) %></td>
    <td><time><%= @resign.created_at&.to_s(:rfc822) %></time></td>
  </tr>
  </tbody>
  <% end %>
</table>
