<tr>
  <td class="has-text-right"><%= Org::Member.human_attribute_name(:name) %></td>
  <td><%= @member.name %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Org::Member.human_attribute_name(:join_on) %></td>
  <td><%= @member.join_on %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Org::Member.human_attribute_name(:department) %></td>
  <td>
    <% @member.departments.each do |department| %>
      <p><%= department.full_name %></p>
    <% end %>
  </td>
</tr>
<tr>
  <td class="has-text-right"><%= Org::Member.human_attribute_name(:experience) %></td>
  <td><%= simple_format(@member.experience) %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Org::Member.human_attribute_name(:attendance_number) %></td>
  <td><%= @member.attendance_number %></td>
</tr>
