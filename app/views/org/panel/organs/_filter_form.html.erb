<%= form_with theme: 'search', model: Org::Organ.new do |f| %>
  <div class="field-body">
    <%= f.number_field :id %>
    <%= f.text_field 'name-like' %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:id, 'name-like']), class: 'button is-light' %>
    </div>
  </div>
<% end %>
