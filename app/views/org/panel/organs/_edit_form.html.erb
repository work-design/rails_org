<%= form_with model: @organ, url: { action: 'update' }, class: 'modal-card' do |f| %>
  <header class="modal-card-head">
    <p class="modal-card-title"><%= t('.title') %></p>
    <button class="delete" data-action="modal#close"></button>
  </header>
  <section class="modal-card-body">
    <%= render 'error_messages', target: @organ %>
    <%= render partial: 'com/nodes/children_select', locals: { f: f, node: Org::Organ.root } %>
    <%= render partial: 'form', locals: { f: f } %>
  </section>
  <footer class="modal-card-foot is-block">
    <%= f.submit %>
  </footer>
<% end %>
